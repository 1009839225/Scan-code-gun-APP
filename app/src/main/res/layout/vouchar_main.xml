<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/v_fl_smhd"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_sao"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/o_tv_smhd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ck01"
                    android:gravity="center_horizontal"
                    android:text="扫码收货"
                    android:textSize="20dp" />
            </FrameLayout>
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/v_fl_smfh"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_sao"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/o_tv_smfh"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/pd01"
                    android:gravity="center_horizontal"
                    android:text="扫码发货"
                    android:textSize="20dp" />
            </FrameLayout>
        </LinearLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/v_fl_smpd"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_sao"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/o_tv_smpd"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/rk01"
                    android:gravity="center_horizontal"
                    android:text="扫码盘点"
                    android:textSize="20dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>